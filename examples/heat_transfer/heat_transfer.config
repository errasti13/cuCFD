# Heat transfer example configuration
# Units: SI (meters, seconds, kg, Kelvin)

# Mesh configuration
mesh:
  type: cartesian        # Mesh type
  dimensions: [64, 64, 64]  # Number of cells in x, y, z
  domain: [0.0, 1.0, 0.0, 1.0, 0.0, 1.0]  # xmin, xmax, ymin, ymax, zmin, zmax

# Material properties
material:
  thermal_conductivity: 1.0  # W/(m·K)
  density: 1000.0           # kg/m³
  specific_heat: 4.18       # J/(kg·K)

# Boundary conditions
boundary_conditions:
  west:
    type: dirichlet
    value: 1.0        # Hot wall at T = 1.0
  east:
    type: dirichlet
    value: 0.0        # Cold wall at T = 0.0
  south:
    type: neumann
    value: 0.0        # Insulated wall (zero heat flux)
  north:
    type: neumann
    value: 0.0        # Insulated wall (zero heat flux)
  bottom:
    type: neumann
    value: 0.0        # Insulated wall (zero heat flux)
  top:
    type: neumann
    value: 0.0        # Insulated wall (zero heat flux)

# Initial conditions
initial_conditions:
  temperature: 0.0    # Initial temperature (uniform)

# Solver settings
solver:
  type: diffusion     # Solver type
  time_step: 0.001    # Time step size in seconds
  end_time: 0.1       # End time in seconds
  max_iterations: 1000  # Maximum number of iterations
  tolerance: 1.0e-6   # Convergence tolerance

# Output settings
output:
  directory: "results/heat_transfer"  # Output directory
  frequency: 10       # Output every N time steps
  format: vtk         # Output format (VTK) 